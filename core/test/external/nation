      <span class="kxtag kxinvisible" data-id="13668" data-alias="Krux Scrape Page Attributes">
        <script src="" class="">
//<![CDATA[
 
(function() {
  var Krux = window.Krux('ns:centro');

  if (window.sectionid) {
    // CNHI properties uses this
    Krux('set', 'page_attr_js_sectionid', cleanUp(window.sectionid));
  }
  // Chartbeat data
  if (typeof window._sf_async_config == "object" && window._sf_async_config.sections) {
      
      Krux('set', 'page_attr_chartbeat_section', cleanUp(window._sf_async_config.sections.split(',')[0]));
  }

  if (typeof window.s == "object" && typeof window.s.prop29 == "string") {
    // Omniture, prop 29
    var section = window.s.prop29;
    // Some times they are delimited by pipe, tilde, or colon
    sections = section.split(/[\|:~]/);
    if (sections.length > 1) {
      // Take the first one
      section = sections[0];
    }
    Krux('set', 'page_attr_omniture_prop29', cleanUp(section));
  }

  if (typeof window.s == "object" && window.s.channel) {
    // Omniture Channel
    Krux('set', 'page_attr_omniture_channel', cleanUp(window.s.channel));
  }

  // Use the url if it is /section/ and nothing else
  if (location.pathname.match(/^\/[^\/\.]+\/{0,1}$/)) {
    Krux('set', 'page_attr_urlroot', cleanUp(location.pathname.replace(/\//g, '')));
  }

  // Util function that pulls a value from a url. works for normal urls or dart urls
  function urlVal(url, val) {
    var m = new RegExp(val + '=([^;&]+)').exec(url);
    return m && unescape(m[1]) || "";
  }

  // Pull Zones from the dart hierarchy. Note that we are often delivered through an iframe,
  // in which case the url will be the ad call (usually DFP)
  function pullZonesFromDart(url) {
    var m = (/^https*:\/\/ad.doubleclick.net\/ad[a-z]?\/([^\/]+)\/([^;\/]+)/).exec(url);
    if (! m) { 
      return;
    }
    Krux('set', 'page_attr_dfp_zone1', cleanUp(m[1]));
    Krux('set', 'page_attr_dfp_zone2', cleanUp(m[2]));
  }
  if (self != top) {
    // In an iframe, try to pull the dart variables from the iframe url
    pullZonesFromDart(location.href);
  }

  (function () {
    if (!document.querySelectorAll) {
       // Old browser
       return;
    }
    var urlStarts = [], doubleclick = document.querySelectorAll("script[src^='http://ad.doubleclick.net']");
    for (var i = 0, l = doubleclick.length; i < l; i++ ){  
      var url = doubleclick[i].getAttribute('src'), m = (/([^;]+)/).exec(url);
      if (i > 0 && urlStarts[0] != m[1]) {
        // This site has more than one type of double click tag, no can do
        return;
      }
      urlStarts[0] = m[1];
    }
    // Looks good.
    pullZonesFromDart(url);
  })();

  // FB Open Graph
  (function () {
    if (!document.querySelectorAll) {
       // Old browser
       return;
    }
    var og_title = document.querySelector("meta[property='og:title']");
    if (og_title) {
       Krux('set', 'page_attr_og_title', og_title.getAttribute('content'));
    }
  })();

  // clean up
  function cleanUp(input) {
    input = input || "";
    // lower, trim
    input = input.toLowerCase().replace(/^[, ]+/, '').replace(/[ ,]+$/, '');
    // Sanity
    if (! input.match(/[a-z.]{2}/) || input.length > 25) {
      input = "";
    }
    return input;
  }

})();

//]]>
        </script>
