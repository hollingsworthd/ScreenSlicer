      <div id="tso-wrapper">
        <div style="display:none" id="tso">
        </div>
      </div>
      <script type="text/javascript">
//<![CDATA[

function renderTSO(ads) {
	$thm.debug("renderTSO:"+ads.length);
	if (ads &amp;&amp; ads.length &gt; 0) {
		var selectedAds = selectTSOAds(ads,6);
		if (null != selectedAds &amp;&amp; selectedAds.length &gt; 0) {
			var html = "&lt;h3&gt;Today's Special Offers&lt;/h3&gt;";
			html += "&lt;ul&gt;";
			for (var i=0; i&lt;selectedAds.length;i++) {
				html += "&lt;li&gt;";
				html += "&lt;a href='"+selectedAds[i].url+"'&gt;"+selectedAds[i].title+"&lt;/a&gt;";
				html += "&lt;span&gt;"+selectedAds[i].body+"&lt;/span&gt;";
				if (null != selectedAds[i].pixel &amp;&amp; selectedAds[i].pixel.length &gt; 0) {
					html += "&lt;img src='"+selectedAds[i].pixel+"' style='height:0;width:0;'/&gt;";
				}
				html += "&lt;/li&gt;";
			}
			html += "&lt;/ul&gt;";
			$("#tso").html(html).show();
		}
	}
}
function selectTSOAds(ads,max) {
	if (ads.length &lt;= max) {
		return ads;
	} else {
		var uniq = {};
		var found = 0;
		var selectedAds = [];
		while (found &lt; max) {
			var ad = ads[Math.floor(Math.random()*ads.length)];
			if (uniq[ad.id] != null) {
				continue;
			} else {
				uniq[ad.id] = true;
				found++;
				selectedAds.push(ad);
			}
		}
		return selectedAds;
	}
	return null;
}

//]]>
      </script>
