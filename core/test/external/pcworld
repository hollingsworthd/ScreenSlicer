		$.getJSON('/ads/bing',
			{
				keywords: "ibm",
				adUnitId: 10176,
				mainLineCount: bingCfg.mainline,
				sidebarCount: bingCfg.sidebar,
				page: 0,
				ord: Math.floor(Math.random()*10000000)
			},
			function(data) {
				var mainlineAds = [];
				var sidebarAds = [];
				$.each(data.bingAds, function(i,item){
					if (item.position == 'mainline') {
						mainlineAds.push(item);
					} else {
						sidebarAds.push(item);
					}
			    });
			    if (mainlineAds.length!=0){
				    if (bingCfg.mainline&gt;mainlineAds.length) {
				    	for (k=0; k&lt;=(bingCfg.mainline - mainlineAds.length); k++){
				    		mainlineAds.push(sidebarAds.pop(k));
				    	}
				    }
			    }
			    renderBingAds("bing-mainline",mainlineAds);
			    renderBingAds("bing-sidebar",sidebarAds);
			}
		)
		
g_arrModules['slinks_ctr'] = true;
